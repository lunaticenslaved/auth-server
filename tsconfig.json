{
  "extends": "./node_modules/@lunaticenslaved/schema/tsconfig.json",
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "files": true
  },
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true
  },
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "composite": false,
    "declaration": false,
    "declarationMap": false,

    /* Bundler mode */
    "useDefineForClassFields": false,
    "esModuleInterop": true,
    "module": "NodeNext",
    "types": ["node", "jest"],
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "emitDecoratorMetadata": true,

    /* Paths */
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["./src/__mocks__"]
}
